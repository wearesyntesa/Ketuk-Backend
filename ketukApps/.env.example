# Server Configuration
PORT=8081
HOST=localhost
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8081/api/auth/v1/google/callback

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=ketuk_db
DB_SSLMODE=disable

# RabbitMQ Configuration
QUEUE_HOST=localhost
QUEUE_PORT=5672
QUEUE_USER=guest
QUEUE_PASSWORD=guest
QUEUE_NAME=schedule
QUEUE_VHOST=/
QUEUE_MAX_CHANNELS=20
QUEUE_HEARTBEAT=60
QUEUE_CONNECT_TIMEOUT=30
QUEUE_PREFETCH=1

# Queue Exchanges
QUEUE_EXCHANGE_DIRECT=ketuk.direct
QUEUE_EXCHANGE_TOPIC=ketuk.topic
QUEUE_EXCHANGE_FANOUT=ketuk.fanout
QUEUE_EXCHANGE_DLX=ketuk.dlx

# Queue Names
QUEUE_TICKETS_CREATED=tickets.created
QUEUE_TICKETS_UPDATED=tickets.updated
QUEUE_TICKETS_DELETED=tickets.deleted
QUEUE_USERS_CREATED=users.created
QUEUE_USERS_UPDATED=users.updated
QUEUE_NOTIFICATIONS=notifications
QUEUE_EMAILS=emails
QUEUE_DEAD_LETTERS=dead.letters
